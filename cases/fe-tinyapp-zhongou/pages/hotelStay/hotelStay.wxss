/* pages/hotelStay/hotelStay.wxss */
.img{
    width: 100%;
    height: 230rpx;
}
.hotelItem{
    display: flex;
    flex-direction:row;
    justify-content: space-between;
    padding: 20rpx;
    margin-top: 50rpx;
    box-sizing: border-box
}
.hotelItem .itemLeft image{
    width: 180rpx;
    height: 150rpx;
}
.hotelItem .itemRight{
    border-left:7rpx solid #82A9DB;
    padding: 0 20rpx;
    margin-left: 35rpx;
    box-sizing: border-box;
    width: 500rpx;
}
.hotelItem .title{
    font-size: 30rpx;
    font-weight: bold;
}
.hotelItem .adress{
    margin: 10rpx 0;
}
.hotelItem .tel,.adress{
    color: #c0c0c0;
}
.input{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    padding: 50rpx;
}
.input input{
    border: 1rpx solid #e0e0e0;
    background-color: #fff;
    margin: 20rpx 0;
    height: 60rpx;
    padding-left: 20rpx;
}
.button{
   padding:0 50rpx;
   margin-top: 50rpx;


}
.button button{
    background-color: #82A9DB;
    font-size: 26rpx;
    color: #fff;
   
}