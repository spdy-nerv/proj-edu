.reportTitle{
    padding: 30rpx;
    color: #9B9999    ;
}
.panel-main image{
    width: 100%;
    height: 414rpx;
}
.panel-btn-area {
    width: 100%;
    height: 160rpx;
}

.panel-main {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}

.panel-description {
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #2d2e33;
    line-height: 1.2;
}

.panel-btn {
    width: 700rpx;
    height: 70rpx;
    margin: auto;
    margin-top: 40rpx;
    /* background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/test_submit_btn.png); */
    background-repeat: no-repeat;
    background-size: 100%;
    background-color:#B29754;
    text-align: center;
    line-height: 80rpx;
    color: #fff;
    font-size: 30rpx;
    
}

.panel-disabled {
    margin-top: 40rpx;
    font-size: 36rpx;
    color: #cccccc;
    text-align: center;
}

.panel-question-wrap {
    padding: 40rpx 0;
    background-color: #fff;
    margin:30rpx;
    box-sizing: border-box;
}

.question-content {
    font-size: 30rpx;
    color: #2d2e33;
    line-height: 1.2;
}

.panel-textarea-wrap {
    padding-top: 20rpx;
}

.panel-textarea {
    width: 100%;
    box-sizing: border-box;
    font-size: 26rpx;
    color: #2d2e33;
    line-height: 1.2;
    height: 100rpx;
    background-color: #f2f3f5;
    border: 1rpx solid #cccccc;
    border-radius: 8rpx;
    padding: 15rpx 23rpx;
}

.panel-option-wrap {
    padding-top: 20rpx;
}

.panel-option {
    display: flex;
    flex-direction: row;
    margin:0 15rpx;
    box-sizing: border-box;
    flex: 1;
}
.checkboxRow{
    display: flex;
    flex-direction: row;
}
.panel-option-checkbox {
    width: 32rpx;
    height: 32rpx;
    background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/checkbox.png);
    background-size: 100%;
    margin-right: 15rpx;
}

.option-checked {
    background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/checkbox_selected.png);
}

.panel-option-radio {
    width: 32rpx;
    height: 32rpx;
    background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/radio.png);
    background-size: 100%;
    margin-right: 15rpx;
}

.option-radio-checked {
    background-image: url(http://eventsocial-1253427581.cossh.myqcloud.com/v1.0/radio_selected.png);  
}

.panel-option-text {
    font-size: 24rpx;
    color: #2d2e33;
    line-height: 1.2;
    flex: 1;
}