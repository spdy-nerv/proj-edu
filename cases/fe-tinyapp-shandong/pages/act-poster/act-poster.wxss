page {
    width: 100%;
    background-color: #ffffff;
    overflow: hidden;
}

.wrap {
    display: flex;
    flex-direction: column;
}

image {
    width: 750rpx;
    height: 1000rpx;
    background-color: #eeeff1;
    display: block;
}

.btn-wrap {
    flex: 1;
    position: relative;
}

.enter-btn {
    display: inline-block;
    font-size: 30rpx;
    color: #c52424;
    border: 2rpx solid #c52424;
    border-radius: 10rpx;
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: 40rpx;
    margin-left: -100rpx;
}