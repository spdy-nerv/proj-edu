/* pages/spot/spot.wxss */
page {
  background-color: #f5f5f5;
}

.con {
  position: relative;
}

.spot-pic {
  width: 100%;
  height: 380rpx;
  background-color: #c2c2c2;
}

.to-nav {
  width: 132rpx;
  height: 132rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  position: absolute;
  right: 60rpx;
  top: 314rpx;
}

.title-wrap {
  background-color: #fff;
}

.title {
  padding: 40rpx 40rpx;
  color: #333;
  font-size: 42rpx;
  font-weight: bold;
}

.address {
  display: flex;
  flex-direction: row;
  padding: 0 40rpx;
  padding-bottom: 23rpx;
  border-bottom: 1rpx solid #eeeeee;
}

.address-icon {
  width: 17rpx;
  height: 23rpx;
  background-image: url(http://edu-1253427581.coscd.myqcloud.com/%E6%99%AF%E7%82%B9%E8%AF%A6%E6%83%85%E5%9D%90%E6%A0%87.png);
  background-size: 100%;
  background-repeat: no-repeat;
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.address-text {
  flex: 1;
  font-size: 26rpx;
  color: #999999;
  line-height: 1.5;
}

.func {
  display: flex;
  flex-direction: row;
  padding: 30rpx 40rpx;
}

.func text {
  font-size: 26rpx;
  color: #999999;
}

.star-outer {
  width: 100rpx;
  height: 20rpx;
  background-image: url(http://edu-1253427581.coscd.myqcloud.com/%E6%8E%A8%E8%8D%90%E7%81%B0%E8%89%B2.png);
  background-size: 20rpx 100%;
  background-repeat: repeat-x;
  display: inline-block;
  margin-left: 18rpx;
}

.star-inner {
  height: 20rpx;
  background-size: 20rpx;
  background-repeat: repeat-x;
}

.star-inner-null,
.star-inner-0 {
  width: 0;
}
.star-inner-1 {
  width: 20rpx;
}
.star-inner-2 {
  width: 40rpx;
}
.star-inner-3 {
  width: 60rpx;
}
.star-inner-4 {
  width: 80rpx;
}
.star-inner-5 {
  width: 100rpx;
}

.func-star-wrap {
  flex: 1;
}

.func-voice-wrap {
  margin-right: 40rpx;
}

.voice-icon {
  width: 18rpx;
  height: 27rpx;
  background-image: url(http://edu-1253427581.coscd.myqcloud.com/%E8%AF%AD%E9%9F%B3%E5%AF%BC%E8%A7%88.png);
  background-size: 100%;
  background-repeat: no-repeat;
  display: inline-block;
  margin-right: 15rpx;
  vertical-align: middle;
}

.video-icon {
  width: 37rpx;
  height: 26rpx;
  background-image: url(http://edu-1253427581.coscd.myqcloud.com/%E8%A7%86%E9%A2%91%E6%B8%B8%E8%A7%88.png);
  background-size: 100%;
  background-repeat: no-repeat;
  display: inline-block;
  margin-right: 15rpx;
  vertical-align: middle;
}

.main-wrap {
  margin-top: 42rpx;
  background-color: #fff;
  padding: 45rpx 40rpx;
}

.main-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 45rpx;
}

.trans-wrap {
  display: flex;
  flex-direction: row;
}

.trans-icon {
  width: 32rpx;
  height: 32rpx;
  background-size: 100%;
  background-repeat: no-repeat;
  margin-right: 23rpx;
}

.trans-info {
  margin-bottom: 27rpx;
}

.trans-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.trans-sub {
  font-size: 24rpx;
  color: #666;
}

.main-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

