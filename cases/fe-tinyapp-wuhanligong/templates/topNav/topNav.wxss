.filter-wrap {
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    padding: 0 40rpx;
    box-sizing: border-box;

}

.filter-type-wrap {
  flex: 1;
  overflow: hidden;
}

.filter-type-scroll {
  width: 100%;
  white-space: nowrap;
}

.filter-type-item {
  margin-right: 50rpx;
  display: inline-block;
  height: 100rpx;
  line-height: 100rpx;
  color: #fff;
  opacity: 0.6;
  font-size: 26rpx;
  box-sizing: border-box;
}

.type-item-selected {
  border-bottom: 6rpx solid #fff;
  opacity: 1;
}