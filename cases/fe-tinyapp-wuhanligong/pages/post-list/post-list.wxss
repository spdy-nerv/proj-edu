/* pages/post-list/post-list.wxss */
@import "../../templates/topNav/topNav.wxss";

.top-wrap {
  position: relative;
}

.top-wrap image {
  width: 100%;
  height: 565rpx;
  background-color: #e5e5e5;
}

.top-info {
  position: absolute;
  padding: 0 32rpx;
  box-sizing: border-box;
  height: 180rpx;
  left: 0;
  bottom: 0;
  background-image: url(http://edu-1253427581.coscd.myqcloud.com/gradientbg.png);
  background-size: 100% 180rpx;
  background-repeat: no-repeat;
  overflow: hidden;
}

.top-title {
  width: 688rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 40rpx;
  color: #fff;
  padding-top: 38rpx;
  white-space: nowrap;  
  text-overflow: ellipsis; 
  overflow: hidden;
}

.top-time {
  font-size: 24rpx;
  color: #fff;
}

.post-item {
  padding: 25rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #e5e5e5;
}

.post-left {
  flex: 1;
  margin-right: 40rpx;
}

.post-item-title {
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
  height: 100rpx;
  overflow: hidden;
  margin-bottom: 50rpx;
}

.post-item-time {
  font-size: 24rpx;
  color: #999;
}

.post-right {
  width: 288rpx;
  height: 172rpx;
}

.post-right image {
  width: 100%;
  height: 100%;
  background-color: #e5e5e5;
}