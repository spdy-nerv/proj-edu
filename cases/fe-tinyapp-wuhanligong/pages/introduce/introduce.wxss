/* pages/demo/demo.wxss */
/*导航栏*/
.tab-item{
  background:#014886;
   width: 100%;
   font-size: 14px;
   padding-left:42rpx;

}
.filter-wrap {
  height: 90rpx;
  width: 630rpx;
}
.filter-item {
  margin: 12rpx 40rpx 24rpx 0rpx;
  padding-bottom:38rpx;
  display: inline-block;
  color: #a2b8f2;
}
.filter-item-selected {
  color: white;
  border-bottom: 3px solid #fffFFF;z-index:100;
}
/*轮播*/
swiper{
  height:565rpx;
  position: relative;
}
image{
  width:750rpx;
  height: 565rpx;
}
/*新闻中心*/
.news-warp{
  position: absolute;
  left: 34rpx;
  top: 310rpx;
  color: #ffffff
}
.news-warp .title{
  font-size: 16px;
  padding-bottom: 22rpx;
}
.news-warp .text1{
   font-size: 30px;
   font-weight: bold;
   margin-bottom: 20rpx;
}
.news-warp .text2{
  font-size: 26px;
}
.context{
  margin: 48rpx 40rpx 0rpx;
  line-height: 55rpx;
  font-size: 16px;
  color:#666666;
}
/*历史沿革*/
.cont{
  border-top: 1px solid #e5e5e5;
   margin: 55rpx 40rpx 0rpx;

}
.cont .pro{
  line-height: 81rpx;
  margin-top:28rpx;
  font-size: 18px;
  color: #323232;
  font-weight: bold;
}
.show{
  display: -webkit-box ;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3; 
}
.pro-txt .txt{
  line-height: 55rpx;
  font-size: 16px;
  color:#666666;
}
