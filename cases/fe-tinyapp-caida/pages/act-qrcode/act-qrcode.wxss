page {
    width: 100%;
    background-color: #ffffff;
    overflow: hidden;
}

.wrap {
    display: flex;
    flex-direction: column;
    background-color: #eeeff1;
}

image {
    width: 500rpx;
    height: 500rpx;
    background-color: #fff;
    display: block;
    margin: auto;
    margin-bottom: 100rpx;
    border-radius: 30rpx;
    padding: 30rpx;
    box-shadow: 0rpx 0rpx 30rpx #999;
}

.event-title {
  font-size: 42rpx;
  line-height: 200rpx;
  text-align: center;
}

.btn-wrap {
    flex: 1;
    position: relative;
}

.enter-btn {
    display: inline-block;
    font-size: 30rpx;
    color: #c52424;
    border: 1rpx solid #c52424;
    border-radius: 10rpx;
    width: 250rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: 40rpx;
    margin-left: -125rpx;
}